PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/nestjs_starter?schema=public"

# CORS
FRONTEND_URL=https://localhost:3001

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_ACCESS_TOKEN_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-this"
JWT_REFRESH_TOKEN_EXPIRES_IN="7d"

# App
PORT=3000
NODE_ENV="development"

# Storage Provider: s3 | local
STORAGE_PROVIDER="s3"
MAX_FILE_SIZE_MB=10

# AWS S3
AWS_REGION="us-east-1"
AWS_S3_KEY_ID="your-access-key-id"
AWS_SECRET_S3_KEY="your-secret-access-key"
AWS_S3_BUCKET="your-bucket-name"

# Local Storage (if using local provider)
LOCAL_STORAGE_PATH="./uploads"